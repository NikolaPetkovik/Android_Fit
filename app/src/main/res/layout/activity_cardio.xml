<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CardioActivity"
    android:background="#52ad56"
    android:id="@+id/parentLayoutCardio">

    <TextView
        android:id="@+id/textViewCardio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Cardio"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/parentLayoutCardio"
        app:layout_constraintStart_toStartOf="@+id/parentLayoutCardio"
        app:layout_constraintTop_toTopOf="@+id/parentLayoutCardio"/>

    <ImageView
        android:id="@+id/imageViewHart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/parentLayoutCardio"
        app:layout_constraintStart_toStartOf="@+id/parentLayoutCardio"
        app:layout_constraintTop_toBottomOf="@+id/textViewCardio"
        app:srcCompat="@drawable/heart" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/checkLayoutCardio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#20000000"
        android:paddingBottom="20sp"
        app:layout_constraintEnd_toEndOf="@+id/parentLayoutCardio"
        app:layout_constraintStart_toStartOf="@+id/parentLayoutCardio"
        app:layout_constraintTop_toBottomOf="@id/imageViewHart"
        app:layout_constraintVertical_weight="1">


        <TextView
            android:id="@+id/textViewMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Mark it complete"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/checkLayoutCardio"
            app:layout_constraintStart_toStartOf="@+id/checkLayoutCardio"
            app:layout_constraintTop_toTopOf="@+id/checkLayoutCardio" />

        <CheckBox
            android:id="@+id/checkBoxCardioWalk2Km"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20sp"
            android:backgroundTint="@android:color/white"
            android:gravity="right|center_vertical"
            android:text="Walk 2 Km"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/checkLayoutCardio"
            app:layout_constraintStart_toStartOf="@+id/checkLayoutCardio"
            app:layout_constraintTop_toBottomOf="@+id/textViewMark" />

        <CheckBox
            android:id="@+id/checkBoxCardioRun5Km"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20sp"
            android:gravity="right|center_vertical"
            android:text="Run 5 Km"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/checkLayoutCardio"
            app:layout_constraintStart_toStartOf="@+id/checkLayoutCardio"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxCardioWalk2Km" />

        <CheckBox
            android:id="@+id/checkBoxCardioSprint200m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20sp"
            android:gravity="right|center_vertical"
            android:text="Sprint 200m"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/checkLayoutCardio"
            app:layout_constraintStart_toStartOf="@+id/checkLayoutCardio"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxCardioRun5Km" />

        <CheckBox
            android:id="@+id/checkBoxCardioSprint400m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20sp"
            android:gravity="right|center_vertical"
            android:text="Sprint 400m"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/checkLayoutCardio"
            app:layout_constraintStart_toStartOf="@+id/checkLayoutCardio"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxCardioSprint200m" />

        <CheckBox
            android:id="@+id/checkBoxCardioBike15min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20sp"
            android:gravity="right|center_vertical"
            android:text="Bike 15 Km"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/checkLayoutCardio"
            app:layout_constraintStart_toStartOf="@+id/checkLayoutCardio"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxCardioSprint400m" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clickLayoutCardio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#1A000000"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/parentLayoutCardio"
        app:layout_constraintEnd_toEndOf="@+id/parentLayoutCardio"
        app:layout_constraintStart_toStartOf="@+id/parentLayoutCardio"
        app:layout_constraintTop_toBottomOf="@id/checkLayoutCardio"
        app:layout_constraintVertical_weight="1">

        <ImageView
            android:id="@+id/imageViewCardioBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/clickLayoutCardio"
            app:layout_constraintStart_toStartOf="@+id/clickLayoutCardio"
            app:layout_constraintTop_toTopOf="@+id/clickLayoutCardio"
            app:srcCompat="@drawable/back2x" />

        <ImageView
            android:id="@+id/imageViewCardioCheck"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/clickLayoutCardio"
            app:layout_constraintEnd_toEndOf="@+id/clickLayoutCardio"
            app:layout_constraintTop_toTopOf="@+id/clickLayoutCardio"
            app:srcCompat="@drawable/tick2x" />
    </android.support.constraint.ConstraintLayout>




</android.support.constraint.ConstraintLayout>