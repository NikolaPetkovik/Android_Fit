<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ca5f5"
    tools:context=".activity.WeightLiftingActivity"
    android:id="@+id/parentLayout">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Weight Lifting"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/parentLayout"
        app:layout_constraintStart_toStartOf="@+id/parentLayout"
        app:layout_constraintTop_toTopOf="@+id/parentLayout" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/parentLayout"
        app:layout_constraintStart_toStartOf="@+id/parentLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:srcCompat="@drawable/weight" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/checkLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#20000000"
        android:paddingBottom="20sp"
        app:layout_constraintEnd_toEndOf="@id/parentLayout"
        app:layout_constraintStart_toStartOf="@id/parentLayout"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintVertical_weight="1">


        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Mark it complete"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/checkLayout"
            app:layout_constraintStart_toStartOf="@+id/checkLayout"
            app:layout_constraintTop_toTopOf="@+id/checkLayout" />

        <CheckBox
            android:id="@+id/checkBoxWeightType1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20sp"
            android:layout_marginStart="20sp"
            android:backgroundTint="@android:color/white"
            android:text="Complete type 1 set"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/checkLayout"
            app:layout_constraintStart_toStartOf="@+id/checkLayout"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            android:gravity="right|center_vertical"/>

        <CheckBox
            android:id="@+id/checkBoxWeightType2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20sp"
            android:layout_marginStart="20sp"
            android:text="Complete type 2 set"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/checkLayout"
            app:layout_constraintStart_toStartOf="@+id/checkLayout"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxWeightType1"
            android:gravity="right|center_vertical"/>

        <CheckBox
            android:id="@+id/checkBoxWeightType3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20sp"
            android:layout_marginStart="20sp"
            android:text="Complete type 3 set"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/checkLayout"
            app:layout_constraintStart_toStartOf="@+id/checkLayout"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxWeightType2"
            android:gravity="right|center_vertical"/>

        <CheckBox
            android:id="@+id/checkBoxWeightType4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20sp"
            android:layout_marginStart="20sp"
            android:text="Complete type 4 set"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/checkLayout"
            app:layout_constraintStart_toStartOf="@+id/checkLayout"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxWeightType3"
            android:gravity="right|center_vertical"/>

        <CheckBox
            android:id="@+id/checkBoxWeightType5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20sp"
            android:layout_marginStart="20sp"
            android:text="Complete type 5 set"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/checkLayout"
            app:layout_constraintStart_toStartOf="@+id/checkLayout"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxWeightType4"
            android:gravity="right|center_vertical"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clickLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#1A000000"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="@id/parentLayout"
        app:layout_constraintEnd_toEndOf="@id/parentLayout"
        app:layout_constraintStart_toStartOf="@id/parentLayout"
        app:layout_constraintTop_toBottomOf="@id/checkLayout"
        app:layout_constraintVertical_weight="1">

        <ImageView
            android:id="@+id/imageViewWeightBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@id/clickLayout"
            app:layout_constraintStart_toStartOf="@id/clickLayout"
            app:layout_constraintTop_toTopOf="@id/clickLayout"
            app:srcCompat="@drawable/back2x" />

        <ImageView
            android:id="@+id/imageViewWeightCheck"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@id/clickLayout"
            app:layout_constraintEnd_toEndOf="@id/clickLayout"
            app:layout_constraintTop_toTopOf="@id/clickLayout"
            app:srcCompat="@drawable/tick2x" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>